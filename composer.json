{
  "name": "andrewscaya/lightmvcskel",
  "description": "A lightweight MVC application for educational purposes built with ASCMVC.",
  "license": "GPL-2.0-only",
  "keywords": [
    "ascmvc",
    "application",
    "mvc",
    "education"
  ],
  "homepage": "https://github.com/andrewscaya/lightmvcskel",
  "authors": [
    {
      "name": "Andrew Caya",
      "email": "andrewscaya@yahoo.ca"
    }
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "andrewscaya/ascmvc": "dev-2.0.0-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3.1",
    "linuxforphp/linuxforcomposer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Application\\Controllers\\": "controllers/Application/Controllers",
      "Application\\Models\\": "models/Application/Models",
      "Application\\Services\\": "controllers/Application/Services"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LightMvcTest\\": "test/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "cs": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}
